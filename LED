##    sleep(0.5)
##    GPIO.output(21, GPIO.HIGH)
##    sleep(0.5)
##    GPIO.output(12, GPIO.HIGH)

###

#main loop
try:
    lose()
            
except KeyboardInterrupt:
    GPIO.cleanup()

