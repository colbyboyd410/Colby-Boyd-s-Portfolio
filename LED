#things to import
import RPi.GPIO as GPIO # RPi.GPIO can be referred as GPIO from now
from time import sleep

###

#set GPIO mode
GPIO.setmode(GPIO.BCM)

###

GPIO.setwarnings(False)

###

#functions

#This is the function that is called if you lose
def lose():
    #this setups the led lights to their gpio
    GPIO.setup(13, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(12, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(21, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(22, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(5, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(19, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(26, GPIO.OUT, initial =  GPIO.LOW)
    GPIO.setup(4, GPIO.OUT, initial =  GPIO.LOW)
    
    #starts the blinking lights
    sleep(0.2)
    GPIO.output(12, GPIO.HIGH)
    sleep(0.2)
    GPIO.setup(5, GPIO.HIGH)
    sleep(0.2)
    GPIO.output(21, GPIO.HIGH)
    sleep(0.2)
    GPIO.setup(22, GPIO.HIGH)
    sleep(0.2)
    GPIO.setup(13, GPIO.HIGH)
    sleep(0.2)
    GPIO.output(4, GPIO.HIGH)
    sleep(0.2)
    GPIO.setup(19, GPIO.HIGH)
    sleep(0.2)
    GPIO.output(26, GPIO.HIGH)
    sleep(0.2)
    
#this is the function that is called if you win
